		    wmode:"transparent",
		    id:"swf_div",
		    scale:"noscale",
		    allowscriptaccess:"always"
		};

		console.log( allvars );
		
		var attributes = {};
		attributes = {
		    id:"swf_div",
		    name:"swf_div"
		}

			swfobject.embedSWF("/assets/gallery_root.swf","swf_div","744","576","10.0.0","/assets/expressInstall.swf",null,params,attributes);
	}

