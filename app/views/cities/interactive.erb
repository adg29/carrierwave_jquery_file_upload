<script type="text/javascript">	
	var params = {};
	var allvars = '';	
	function FBUser_swfInitialize(){
		allvars = 'mosaicDataPath=/cities/<%= @city.id %>/mosaics/latest.xml&'
						+'cities_status=/cities.xml&'
						+'loc_code=en_de&'
						+'currentCityId=<% if @city_none %>none<%else%>city-<%=@city.id%><% end %>&'
						+'currentMosaicId=<%= @mosaic.id %>_files&'
						+'usersurl=/users.xml&'
						+'unitSize=6&'
						+'mosaicWidth=744&'
						+'mosaicHeight=516&'
						+'layoutDataUrl=/assets/layoutdata.xml&'
						+'assetUrl=/assets/resource.swf&'
						+'mosaic_image=/assets/pagoda-new.jpg&'
						+'mosaicPath=/mosaics&'
						+'stringsUrl=/assets/strings.xml&'
						+'baseUrl=/uploads/picture/file/&'
						+'userId='+kb.FBUser.id;
		
		params = {
		    flashvars: allvars,
		    wmode:"transparent",
		    id:"swf_div",
		    scale:"noscale",
		    allowscriptaccess:"always"
		};

		var attributes = {};
		attributes = {
		    id:"swf_div",
		    name:"swf_div"
		}

			swfobject.embedSWF("/assets/gallery_root.swf","swf_div","744","576","10.0.0","/assets/expressInstall.swf",null,params,attributes);
	}

	$(function(){
		//Cufon.replace($('#intel_use'));

		$('#intel_about a').click(function(e){
			e.preventDefault();
			$.modal('<iframe src="http://www.youtube.com/embed/zWKVSXkrWUc" width="640" height="340" style="border:0">', {
				containerCss:{
					width: 640,
					height:360,
					padding:0
				},
				overlayClose:true
			});
		})

		$('#intel_use').click(function(e){
			e.preventDefault();
			$("#intel_tos_content").modal({
				overlayClose:true,
				onOpen: function (dialog) {
					dialog.overlay.fadeIn('slow', function () {
						dialog.data.hide();
						dialog.container.fadeIn('slow', function () {
							dialog.data.slideDown('slow');
						});
					});
				},
				containerCss:{
					background: '#DAEBF5',
					width: 640,
					height:360,
					padding:0
				}
				});
					
		});


	});
</script>
		
