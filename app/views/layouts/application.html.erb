<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "jQuery-File-Upload" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
  <div id="fb-root"></div>
  <script>

   var kb = kb || {};
   kb.FBGraphFetch = function(){
	FB.api('/me', function(response) {
		kb.FBUser = { 
				name : response.name,
				id : response.id,
				locale : response.locale
			    };
		console.log('Good to see you, ' + response.name + ', aka '+ response.id);
		console.log('Looks like your locale is  ' + response.locale + '.');
		console.log( response );  

		kb.FBUser_populate_form();
	});

    }

    kb.FBUser_populate_form = function(){
	console.log('Set FB form values');
	console.log( $('#picture_user_attributes_fbid').val(kb.FBUser.id) );
	console.log( $('#picture_user_attributes_name').val(kb.FBUser.name) );
	console.log( $('#picture_user_attributes_locale').val(kb.FBUser.locale) );

	var fbprofilepic = 'http://graph.facebook.com/'+kb.FBUser.id+'/picture';
	$('#fbavatar').html('<img src="'+fbprofilepic+'"/>');
	$('#fbusername').html(kb.FBUser.name);
    }

    window.fbAsyncInit = function() {
      FB.init({
        appId      : '368266769857206', // App ID
        channelUrl : '//<%= request.env['HTTP_HOST'] %>/channel.html', // Channel File
        status     : true, // check login status
        cookie     : true, // enable cookies to allow the server to access the session
        xfbml      : true  // parse XFBML
      });

	FB.getLoginStatus(function(response) {
	  if (response.status === 'connected') {
	    // the user is logged in and connected to your
	    // app, and response.authResponse supplies
	    // the user's ID, a valid access token, a signed
	    // request, and the time the access token 
	    // and signed request each expire
	    console.log('Welcome!  Fetching your information.... ');
	    kb.FBGraphFetch();
	  } else { //if (response.status === 'not_authorized') {
	    // the user is logged in to Facebook, 
	    //but not connected to the app
	    // Additional initialization code here
	     FB.login(function(response) {
	       if (response.authResponse) {
		 console.log('Welcome!  Fetching your information.... ');
	       	 kb.FBGraphFetch();
	       } else {
		 console.log('User cancelled login or did not fully authorize.');
	       }
	     }, {scope: 
		  'email',
		    
		});
	   }
	 });



      
    };


    // Load the SDK Asynchronously
    (function(d){
       var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
       js = d.createElement('script'); js.id = id; js.async = true;
       js.src = "//connect.facebook.net/en_US/all.js";
       d.getElementsByTagName('head')[0].appendChild(js);
     }(document));
  </script>
    <div id="container">
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
